  <div class="columns nested-fields" data-add-stock="<%= form.object.new_record?%>" >
    <div class="column is-6">
      <div class="field">
        <%= form.text_field :spec,  placehoder: '規格', class: 'input' %>
      </div>
    </div>
    <div class="column is-2">
      <div class="field">
        <%= form.number_field :quantity, placehoder: '數量', class: 'input' %>
      </div>
    </div>
    <div class="column is-1">
      <div class="field">
        <%=link_to "刪除", "#", class: "button is-danger", data: {action: 'product-form#delete_stock'} %>
      </div>
    </div>
    <%= form.hidden_field :_destroy %>
  </div>